#include<iostream>
#include<stdio.h>
using namespace std;

//using if loop
int main(){
    int n;
    cin>>n;
    if(n>0){
        cout<<"No is positive"<<endl;

    }
    else{
     if(n<0) {
      
         cout<<"No is not positive"<<endl;
    }
    }
   
    if(n == 0){
     cout<<"No is zero"<<endl;
    }

    return 0;
}
//using else-if loop
#include<iostream>
#include<stdio.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    if(n>0){
        cout<<"No is positive"<<endl;

    }
    else if(n<0) {
      
         cout<<"No is not positive"<<endl;
    }
    
   
    else{
     cout<<"No is zero"<<endl;
    }

    return 0;
}
